{
	"info": {
		"_postman_id": "trustai-backend-collection",
		"name": "Project TrustAI Backend",
		"description": "Collection to test Project TrustAI Backend API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		},
		{
			"key": "projectId",
			"value": "",
			"type": "string"
		}
